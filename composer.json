{
    "require-dev": {
        "behat/behat": "^3.11"
    },
    "autoload": {
        "psr-4": {
            "PHPMud\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "PHPMud\\Tests\\": "tests/"
        }
    },
    "require": {
        "symfony/uid": "^6.1",
        "webgriffe/in-memory-repository": "^0.1.0",
        "webmozart/assert": "^1.11",
        "symfony/dependency-injection": "^6.1",
        "amphp/socket": "^1.2"
    },
    "scripts": {
        "start": "bin/phpmud & echo $! > /tmp/phpmud.pid",
        "stop": "kill $(cat /tmp/phpmud.pid); rm /tmp/phpmud.pid"
    }
}
